{
    # Global options
    email {$ACME_EMAIL:faithconnect2020@gmail.com}
}

{$DOMAIN_NAME:localhost} {
    # Reverse proxy to the local Gunicorn server on port 8000
    reverse_proxy localhost:8000

    # Optional: Log settings
    log {
        output file /var/log/caddy/access.log
    }

    # Compress responses
    encode zstd gzip
}
